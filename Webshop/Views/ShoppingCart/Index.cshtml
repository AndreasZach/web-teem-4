@model IEnumerable<Webshop.Models.OrderItem>

@{
    ViewData["Title"] = "Index";
}

<table class="table mb-0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td colspan="2">
                    <img src="@item.Product.Image" />
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td class="align-items-center">
                    <form class="float-left ml" asp-action="IncrementProductQuantity" method="post">
                        <input type="hidden" name="id" value="@item.OrderId" />
                        <input type="hidden" name="idPart" value="@item.ProductId" />
                        <input type="submit" value="+" class="btn btn-success btn-sm" />
                    </form>
                    <h4 class="float-left mx-2 my-0 align-middle">@Html.DisplayFor(modelItem => item.Quantity)</h4>
                    <form class="float-left" asp-action="DecrementProductQuantity" method="post">
                        <input type="hidden" name="id" value="@item.OrderId" />
                        <input type="hidden" name="idPart" value="@item.ProductId" />
                        <input type="submit" value="-" class="btn btn-danger btn-sm" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">
                <h4 class="text-center">Total cost: @Math.Round(Model.Sum(p => p.Product.Price), 2) (SelectedCurrency)</h4>
            </td>
        </tr>
    </tfoot>
</table>
<Span class="float-right mr-2">@Html.ActionLink("Confirm Order", "SelectPaymentAndDeliveryOption", "OrderConfirmation", new { products = ViewBag.listOfOrderItems }, null)</Span>
