@model IEnumerable<Webshop.Models.OrderItem>

@{
    ViewData["Title"] = "Confirmation";
}

<head>

    <link rel="stylesheet" href="~/css/OrderConfirmation/Confirmation.css" />

</head>


<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>

            </th>
            <th>
                Product
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        var base64 = Convert.ToBase64String(item.Product.Image);
                        var imgSrc = string.Format("data:image.jpg;base64, {0}", base64);
                    }
                    <img src="@imgSrc" style="max-width: 100px; max-height:100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @CurrencyManager.CalcPrice(item.Product.Price, HttpContextAccessor.HttpContext.Session.GetString("currencyRate"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>
        }
    </tbody>
</table>

<p>Confirmation number: @Model.Select(o => o.Order.Id).FirstOrDefault()</p>

<p>Amount Payed: @CurrencyManager.CalcPrice(decimal.Parse(Model.FirstOrDefault().Order.TotalAmount.ToString()), HttpContextAccessor.HttpContext.Session.GetString("currencyRate")) @HttpContextAccessor.HttpContext.Session.GetString("currencyCode"), via @ViewBag.paymentType</p>

<p>Your order will be delivered to you within: @Model.Select(o => o.Order.DeliveryOption).FirstOrDefault().</p>

<p>This confirmation has also been sent to your email! </p>

@Html.ActionLink("Download as PDF", "DownloadConfirmationPdf", "OrderConfirmation", new { orderId = Model.FirstOrDefault().OrderId })

@Html.ActionLink("ShopMore", "Index", "/", null, null)
