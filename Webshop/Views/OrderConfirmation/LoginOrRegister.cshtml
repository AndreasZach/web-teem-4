@model Webshop.Models.User

@{
    ViewData["Title"] = "LoginOrRegister";
}

<head>

    <link rel="stylesheet" href="~/css/OrderConfirmation/LoginOrRegister.css" />

</head>



<div class="float-container">
    <div class="inputFields">
        <h4>Login</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Login" asp-controller="UserWithAuthentication">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div>
                        <input type="text" name="totalPrice" value="@ViewBag.totalPrice" hidden />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-dark" />
                    </div>

                </form>
                <div>
                    <a asp-action="ForgotPassword" asp-controller="UserWithAuthentication">Forgot Password</a>
                </div>
            </div>
        </div>
    </div>
        <div class="inputFields">

            <h4>Register</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Register" asp-controller="UserWithAuthentication">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StreetAdress" class="control-label"></label>
                            <input asp-for="StreetAdress" class="form-control" />
                            <span asp-validation-for="StreetAdress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PostNumber" class="control-label"></label>
                            <input asp-for="PostNumber" class="form-control" />
                            <span asp-validation-for="PostNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="City" class="control-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Country" class="control-label"></label>
                            <input asp-for="Country" class="form-control" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div>
                            <input type="text" name="totalPrice" value="@ViewBag.totalPrice" hidden />
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-dark" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>